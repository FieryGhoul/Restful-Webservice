<!-- views/delete.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Delete Person</title>
    <style>
        .container {
            max-width: 500px;
            margin: 0 auto;
        }
        .person-info {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
        }
        .info-row {
            margin-bottom: 10px;
        }
        .label {
            font-weight: bold;
        }
        .actions {
            display: flex;
            gap: 10px;
        }
        .delete-btn {
            padding: 10px 15px;
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .cancel-btn {
            display: inline-block;
            padding: 10px 15px;
            background-color: #ccc;
            color: black;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Person</h1>
        
        <p>Are you sure you want to delete this person?</p>
        
        <div class="person-info">
            <div class="info-row">
                <span class="label">Name:</span> <%= person.name %>
            </div>
            <div class="info-row">
                <span class="label">Age:</span> <%= person.age %>
            </div>
            <div class="info-row">
                <span class="label">Gender:</span> <%= person.gender %>
            </div>
            <div class="info-row">
                <span class="label">Mobile Number:</span> <%= person.mobileNumber %>
            </div>
        </div>
        
        <form action="/person/delete/<%= person._id %>" method="POST">
            <div class="actions">
                <button type="submit" class="delete-btn">Delete</button>
                <a href="/person" class="cancel-btn">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
